@model ResourcesViewModel

@{
    ViewData["Title"] = "Resources";
}

<h1>Manage Resources of @Model.CompetenceName</h1>

<p>
    <a asp-route-id="@Model.CompetenceId" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Displayed Text
            </th>
            <th>
                Link
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var resource in Model.Resources)
        {
            <tr>
                <td>
                    @resource.DisplayText
                </td>
                <td>
                    @resource.Link
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@resource.ResourceId">Edit</a> |
                    @Html.ActionLink("Delete", "Delete", "Resources", new { id = resource.ResourceId }, new { onclick="return confirm('Are you sure you want to delete this Resource (" + resource.DisplayText + ")?')" })
                </td>
            </tr>
        }
    </tbody>
</table>
